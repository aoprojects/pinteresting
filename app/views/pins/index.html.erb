<!-- all pins display here on the pins index view -->
  <div id="pins">
    <% @pins.each do |pin| %>
      <div class="box">
        <%= image_tag pin.image.url(:medium)%>
        <%= pin.description %>
        <%= pin.string %>
        <%= pin.user.try(:email) %>
        <%= link_to 'Show', pin %>
        <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin) %>
        <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div><!-- close box for jquery -->
    <% end %>
  </div>



